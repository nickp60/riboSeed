journal = {BMC Bioinformatics},
keywords = {Contig order,Genome assembly,Inversion,Prokaryotes Background,Scaffold},
title = {{SIS: a program to generate draft genome sequence scaffolds for prokaryotes}},
url = {http://www.biomedcentral.com/1471-2105/13/96},
volume = {13},
year = {2012}
}
@article{Al-Okaily2016,
